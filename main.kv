MDBoxLayout:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.bg_light

    MDToolbar:
        title: 'BOM update'

    MDBoxLayout:
        padding: ['50dp', 0]
        orientation: 'vertical'

        MDGridLayout:
            cols: 2

            MDLabel:
                id: lab_single
                halign: 'center'
                text: 'Select a single component bom list:'
                # md_bg_color: app.theme_cls.primary_color

            MDRelativeLayout:
                MDRoundFlatIconButton:
                    text: 'Browse'
                    icon: 'folder'
                    pos_hint: {'center_x': .3, 'center_y': .5}
                    on_press: app.set_bom_single_path()

        MDLabel:
            id: lab_single_path
            halign: 'center'
            size_hint_y: .5
            text: ''

        MDSeparator

        MDGridLayout:
            cols: 2

            MDLabel:
                id: lab_hier
                halign: 'center'
                text: 'Select a hierarchical bom list:'

            MDRelativeLayout:
                MDRoundFlatIconButton:
                    text: 'Browse'
                    icon: 'folder'
                    pos_hint: {'center_x': .3, 'center_y': .5}
                    on_press: app.set_bom_hier_path()

        MDLabel:
            id: lab_hier_path
            halign: 'center'
            size_hint_y: .5
            text: ''

        MDSeparator

        MDRelativeLayout:
            MDFillRoundFlatButton:
                id: run_button
                text: 'Run!'
                font_size: 20
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: .8, .8
                on_press: app.update_bom()




